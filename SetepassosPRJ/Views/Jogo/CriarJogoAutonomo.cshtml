@model SetepassosPRJ.Models.Jogo
@{
    ViewData["Title"] = "Modo Autonomo";
}

<h1> Modo de Jogo: Autónomo</h1>

<form asp-action="CriarJogo" method="post">
    <div class="form-group text-center">
        <img src="~/images/Old-Char.png" alt="HTML5 Icon" class="charpick">
        <label class="arrangeChars">
            <input class="form-control" type="radio" asp-for="Nome" value="auto3" checked><p class="font-large">Auto 3</p>
        </label>
        <label class="arrangeChars">
            <input class="form-control" type="radio" asp-for="Nome" value="auto7"><p class="font-large">Auto 7</p>
        </label>
        <label class="arrangeChars">
            <input class="form-control" type="radio" asp-for="Nome" value="auto0"><p class="font-large">Auto 0</p>
        </label>
    </div>
    <div class="explicacaoAutonomo">
        <p> Auto 3: Neste modo o jogo fará apenas 3 rondas e ou morre ou desiste. </p>
        <p> Auto 7: Neste modo o jogo fará apenas 7 rondas e ou morre ou desiste. </p>
        <p> Auto 0: Neste modo o jogo fará no máximo 50 rondas, tentando ganhar. Se não morrer nem ganhar o jogo desiste ao fim das 50 rondas.</p>
    </div>
    <div class="rowButton">
        <input name="PerfilTipo" value="S" type="hidden" />
        <input name="Autonomo" value="true" type="hidden" />
        <input type="image" value="CriarJogoAutonomo" src="~/images/btns/btn-jogar.png" class="botaoJogar" />
        <a asp-action="CriarJogo" class="botaoModo"><img src="~/images/btns/btn-normal.png" /></a>
    </div>
</form>





