@model SetepassosPRJ.Models.NovoJogo
@{
    ViewData["Title"] = "Novo Jogo";
}

<form asp-action="CriarJogo" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Nome">Nome </label>
            <input class="form-control" asp-for="Nome" />
        </div>
    <div class="container-fluid">
        
        <div class="form-group">
                   <img src="~/images/Nerd-Char.png" alt="HTML5 Icon" class="charpick">
                <label class="ArrangeChars">
                    <input class="form-control" type="radio" asp-for="PerfilTipo" value="Nerd" checked>Nerd
                </label>
                    <img src="~/images/Fat-Char.png" alt="HTML5 Icon" class="charpick">
                <label class="ArrangeChars">
                    <input class="form-control" type="radio" asp-for="PerfilTipo" value="Fat">Gordo
                </label>
                    <img src="~/images/Old-Char.png" alt="HTML5 Icon" class="charpick">
                <label class="ArrangeChars">
                    <input class="form-control" type="radio" asp-for="PerfilTipo" value="Old">velha louca
                </label>
            </div>
                           
        </div>

       <div>
            <input type="image" src="~/images/btns/btn-jogar.png" value="CriarJogo" class="BotaoJogar"></input>
       </div>
       


</form>




