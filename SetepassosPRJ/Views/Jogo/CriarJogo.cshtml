@model SetepassosPRJ.Models.NovoJogo
@{
    ViewData["Title"] = "Novo Jogo";
}

<h1> Modo de Jogo: Normal </h1>
<form asp-action="CriarJogo" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Nome">Nome </label>
        <input class="form-control" asp-for="Nome" />
    </div>


    <div class="form-group">
        <img src="~/images/Nerd-Char.png" alt="HTML5 Icon" class="charpick">
        <label class="arrangeChars">
            <input class="form-control" type="radio" asp-for="PerfilTipo" value="W" checked>
            <p class="font-large">Nerd</p>
        </label>
        <img src="~/images/Fat-Char.png" alt="HTML5 Icon" class="charpick">
        <label class="arrangeChars">
            <input class="form-control" type="radio" asp-for="PerfilTipo" value="B">
            <p class="font-large">Gordo</p>
        </label>
        <img src="~/images/Old-Char.png" alt="HTML5 Icon" class="charpick">
        <label class="arrangeChars">
            <input class="form-control" type="radio" asp-for="PerfilTipo" value="S">
            <p class="font-large">Velha Louca</p>
        </label>
    </div>
    <div class="rowButton">
            <input type="image" src="~/images/btns/btn-jogar.png" value="CriarJogo" class="botaoJogar" />
              <a asp-action="CriarJogoAutonomo" class="botaoModo"><img src="~/images/btns/btn-autonomo.png" /></a>
    </div>
</form>




