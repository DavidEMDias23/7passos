@model List<HiScores>
@{ Layout = "_Layout";
    ViewData["Title"] = "Home";
}

<div class='page-wrapper'>
    <div class='row'>
        <div class='column'>
            <h1> Intro </h1>
            <p>Este jogo foi desenvolvido como projeto no âmbito da disciplina de Desenvolvimento de Aplicações II do curso de G.S.I.</p>
            <p>O objetivo do jogo é conseguir passar 7 salas com o máximo de pontos, para isso tens de encontrar uma chave que permitirá sair da 7ª sala.</p>
        </div>
        <div class='column'>
            <a asp-controller="Jogo" asp-action="CriarJogo"><img src="~/images/btns/btn-iniciar1.png" class="botaoIniciar" /></a>
        </div>
        <div class='column'>
            <h1>Hi-Scores Top 3</h1>
            @if (Model.Count == 0)
            {
                <p>Ainda sem scores disponíveis.</p>
            }
            else
            {
            int rank = 1;
            <div class="text-center">
                <table id="tabela" class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center" scope="col">Posição</th>
                            <th class="text-center" scope="col">Nome Jogador</th>
                            <th class="text-center" scope="col">Pontuação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (HiScores jogo in Model)
                        {
                            <tr>
                                <td>@rank</td>
                                <td>@jogo.Nome</td>
                                <td>@jogo.MoedasOuroTotal</td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            </div>
            }
        </div>
    </div>
</div>
